{
    "name": "physio/mylittlecms",
    "type": "library",
    "description": "a little CMS designed with laravel backpack",
    "keywords": [
        "physio",
        "mylittlecms"
    ],
    "homepage": "https://github.com/physio/mylittlecms",
    "license": "MIT",
    "authors": [
        {
            "name": "physio",
            "email": "ilphysio@gmail.com",
            "homepage": "github.com/physio",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0",
        "backpack/base": "^0.7.21",
        "backpack/crud": "^3.2",
        "backpack/generators": "^1.1",
        "backpack/permissionmanager": "^2.1",
        "backpack/settings": "^2.0",
        "backpack/pagemanager": "^1.1",
        "backpack/langfilemanager": "^1.0",
        "barryvdh/laravel-debugbar": "^2.4",
        "greggilbert/recaptcha": "^2.2",
        "spatie/laravel-cookie-consent": "^1.8",
        "spatie/laravel-sitemap": "^2.2"
    },
    "minimum-stability": "dev",    
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "physio\\mylittlecms\\": "src/app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "physio\\mylittlecms\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
